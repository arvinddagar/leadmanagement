<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Editing Records</h3>
    <div class="row">
      <div class="col-md-12">
      </div>
      <div class="col-md-12 mt">
        <div class="content-panel">
          <%= render 'form' %>
          
          <%= link_to 'Show', @daily_update %> |
          <%= link_to 'Back', daily_updates_path %>
          <h3>This Client Status Till Now</h3>
          <table class='table'>
          	<tr><th>Status</th><th> Comment </th><th>Updated By</th><th>Updated At</th></tr>
          	Created By : 
          	<tr><td><%= @daily_update.business %></td><td>@daily_update.number</td><td></td></tr>
            <% @lead_status.each do |ls|%>
            	<tr>
            	  <td><%= ls.state %></td>
            	  <td><%= ls.comment %></td>
            	  <td><%= ls.user.name if ls.user.present? %></td>
                <td><%= ls.updated_at.strftime("%d-%m-%Y") if ls.updated_at.present?%></td>
              </tr>
            <%end%>
          </table>
          <%= button_tag 'Schedule meeting',:class=>"togg"%>
          <br/>
          <div class="toggl">
            <%= form_tag(schedule_meeting_path, :method=>'post', :multipart => true) do %>
           <table class="table">
           <tr>
             <td>Date:</td>
             <td><%= date_field_tag "meeting_date" %></td>
           </tr>
           <tr>
            <td> Time: </td>
             <td><%= time_field_tag "meeting_time" %></td>
           </tr>
           <tr>
            <td> Venue</td>
             <td><%= text_area_tag "venue", "", :size=>"20x5" %></td>
           </tr>
           <tr>
            <td> Notes</td>
             <td><%= text_area_tag "notes", "", :size=>"20x5" %></td>
           </tr>
           <tr>
            <td> Assigned to:</td>
             <td><%= select_tag "assigned_to", options_from_collection_for_select(User.all, "id", "email"),:class=>"form-control",:style=>"width:30%"%></td>
           </tr>
           <%= hidden_field_tag :daily_update_id , params[:id]%>
           <tr>
           <td></td>
             <td><%= submit_tag 'Submit' %></td>
           </tr>
           </table>
          <% end %> 
          </div>
        </div>
      </div>
    </div>
  </section>   
</section>

 
<script>
  $( document ).ready(function() {
   $( ".toggl" ).hide();
  });
$( ".togg" ).click(function() {
  $( ".toggl" ).show();
});
 </script>

