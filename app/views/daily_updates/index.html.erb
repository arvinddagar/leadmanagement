<div class="container">
<h1>Listing Daily Updates</h1>

<%= search_form_for @search, :html=>{:class=>"form-inline", :role=>"form"} do |f| %>
 <%= f.label 'Filter By Date' %>
 <%= f.date_field :created_at_eq , :class=>'form-control'%>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<div style="float:right;"><%= link_to 'New Daily update', new_daily_update_path , :class=>"btn btn-primary"%></div>

<table class='table'>
  <thead>
    <tr>
      <th>Business</th>
      <th>Contact person</th>
      <th>Number</th>
      <th>Created At</th>
      <th>Status</th>
      <th>Comment</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_updates.each do |daily_update| %>
      <tr>
        <td><%= daily_update.business %></td>
        <td><%= daily_update.contact_person %></td>
        <td><%= daily_update.number %></td>
        <td><%= daily_update.created_at.to_date %></td>
        <td><%= daily_update.lead_status.first.state if daily_update.lead_status.present? %></td>
        <td><%= daily_update.lead_status.first.comment if daily_update.lead_status.present? %></td>
        <td><%= daily_update.address.truncate(25) %></td>
        <td><%= link_to 'Show', daily_update %></td>
        <td><%= link_to 'Update', edit_daily_update_path(daily_update) %></td>
        <td><%= link_to 'Destroy', daily_update, method: :delete, data: { confirm: 'Are you sure?' }  if current_user.admin?%></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= paginate @daily_updates %>

<%#= link_to 'New Daily update', new_daily_update_path %>
</div>