<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Listing Contracts</h3>
    <div class="row">
      <div class="col-md-12">
      </div>
      <div class="col-md-12 mt">
        <div class="content-panel">
        <%= form_tag("/contract_updates") do %>
        <table>
        	<tr>
        		<td>Description</td>
        		<td><%=text_area_tag :description%></td>
        	</tr>
        	<%=hidden_field_tag :add_contract_id,params[:id]%>
          <%=hidden_field_tag :user_id,current_user.id%>
        	<tr>
        	  <td>
        	    <%=submit_tag 'Save'%>
              </td>
            </tr>
        </table>
        
        <%end%>
        </div>
      </div>
    </div>
  </section>   
</section>