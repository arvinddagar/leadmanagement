<html lang="en">
  <body>
    <div id="login-page">
      <div class="container">
       <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => { :class=>"form-login"  ,:role=>"form"}) do |f| %>
          <h2 class="form-login-heading">sign in now</h2>
          <div class="login-wrap">
            <%= f.email_field :email,:class=>"form-control", :placeholder=>"Email address", autofocus: true %>
            <br>
                <%= f.password_field :password, :class=>"form-control", :placeholder=>"Password", required: true,autocomplete: "off" %>
            <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>
            <label class="checkbox">
            <span class="pull-right">
            </span>
            </label>
            <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>
       <%end%>
      </div>
    </div>
  </body>
</html>
<script>
  $.backstretch("/assets/login-bg.jpg", {speed: 500});
</script>