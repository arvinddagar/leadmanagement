<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Categories Listing</h3>
    <div class="row">
      <div class="col-md-12">
      </div>
      <div class="col-md-12 mt">
        <div class="content-panel" >
          <div class="container">
            <div style="float:right;"><%= link_to 'New Category', new_admin_category_path , :class=>"btn btn-primary"%></div>
            <table class='table'>
              <thead>
                <tr>
                  <th>S.no</th>
                  <th>Name</th>                
                </tr>
              </thead>            
              <tbody>
              <%s_no=0%>
                <% @categories.each do |category| %>
                  <tr>
                  <td><%=s_no=s_no+1%></td>
                    <td><%= category.name %></td>
                    <td><%= link_to 'Show', admin_category_path(category) %> |
                    <%= link_to 'Edit', edit_admin_category_path(category) %> |
                    <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>            
              </tbody>
            </table>            
            <%= link_to 'New Category', new_admin_category_path,:class=>"btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>   
</section>