<h3>This Client Status Till Now</h3>
<div style="float:right;color:#fff;"><%= link_to 'Create new User' , new_admin_manage_user_path , :class=>"btn btn-primary"%></div>

<table class='table'>
  <thead>
	<tr><th>Email</th><th> Role </th><th>Change permission</th></tr></thead>
<% @user.each do |ls|%>
	<tr>
	<td><%= link_to ls.email,user_daily_updates_path(:id=>ls.id) %></td>
	<td></td>
	<td><%= check_box_tag 'Deactivate', 'Deactivate', !ls.active , :class=> 'deactivate' , :val => ls.id%><%#= check_box_tag :active, checked: false,  "Dactivate Account",:class=> 'deactivate', :val => ls.id%><% if !ls.active %> Activate Account <%else%> Deactivate Account<%end%></td><td><%= link_to "Edit" , edit_admin_manage_user_path(ls)%></td></tr>
<%end%>
</table>


<script>
// it is for merchant wise filter

   $('.deactivate').on('change', function() {
   // alert( $(this).attr('val'));
    $.ajax('/admin/deactivate', {
        type: 'get',
        dataType: 'html',
        data: {id: $(this).attr('val') },
        success: function(data, textStatus, jqXHR) {
        alert(data);
        location.reload();
        }
      });
  });
  </script>