<div class="container">
<h1>Listing Daily Updates</h1>
<div style="float:right;"><%= link_to 'New Daily update', new_daily_update_path , :class=>"btn btn-primary"%></div>
<table class='table'>
  <thead>
    <tr>
      <th>Business</th>
      <th>Contact person</th>
      <th>Number</th>
      <th>Designation</th>
      <th>Status</th>
      <th>Summary</th>
      <th>Address</th>
      <th>Email</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_updates.each do |daily_update| %>
      <tr>
        <td><%= daily_update.business %></td>
        <td><%= daily_update.contact_person %></td>
        <td><%= daily_update.number %></td>
        <td><%= daily_update.designation %></td>
        <td><%= daily_update.status %></td>
        <td><%= daily_update.summary %></td>
        <td><%= daily_update.address %></td>
        <td><%= daily_update.email %></td>
        <td><%= daily_update.updated_at %></td>
        <td><%= link_to 'Show', daily_update %></td>
        <td><%= link_to 'Edit', edit_daily_update_path(daily_update) %></td>
        <td><%= link_to 'Destroy', daily_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>
    <%= paginate @daily_updates %>

<%= link_to 'New Daily update', new_daily_update_path %>
</div>