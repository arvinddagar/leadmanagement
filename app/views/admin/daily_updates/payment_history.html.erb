<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Payments</h3>
    <div class="row">
        <div class="col-md-12">
        </div>
      <div class="col-md-12 mt">
        <div class="content-panel">
          <%= form_tag("/create_payment") do %>
           
            <table class="table">
              <tr>
          	    <td>Collection date</td>
          	    <td><%=date_field_tag :collection_date%></td>
              </tr>
              <tr>
          	    <td>
          	  	  Amount
          	    </td>
          	    <td>
          	  	  <%=text_field_tag :amount %>
          	    </td>
              </tr>
              <tr>
          	    <td>
          	  	  Transaction type
          	    </td>
          	    <td>
          	  	  <%= select_tag 'transaction_type', options_for_select([
      	            ['Select',''],
      	            ['Cheque','Cheque'],
      	            ['Cash','Cash']
      	            ]),:style=>"width: 122px;"%>
          	    </td>	
              </tr>
           	  <tr class="transaction">
          	    <td>
          	  	  Cheque no
          	    </td>
          	    <td>
          	  	  <%=text_field_tag :cheque_no%>
          	    </td>
              </tr>
          	  <tr class="transaction">
          	    <td>
          	  	  Bank name
          	    </td>
          	    <td>
          	  	  <%= text_field_tag :bank_name%>
          	    </td>
              </tr>
              <tr class="transaction">
                <td>
                  Cheque Date
                </td>
                <td>
                  <%= date_field_tag :cheque_date%>
                  
                </td>
                </div>
              </tr>
                 <%=hidden_field_tag :add_contract_id,params[:id]%>
              <tr>
                <td> <%=submit_tag%></td>
              </tr>
        
           	</table>
          <% end %>
        <%=render 'payment_details'%>
        </div>
      </div>
    </div>
  </section>   
</section>
<script>
 $( document ).ready(function() {
   $( ".transaction" ).hide();
  });
 $( "#transaction_type" ).change(function() {
  if($(this).val()=="Cheque") {

  $( ".transaction" ).show();
  
} 
else{
   $( ".transaction" ).hide();
}
});


</script>