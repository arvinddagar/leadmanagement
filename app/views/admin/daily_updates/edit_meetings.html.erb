<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Meetings</h3>
    <div class="row">
        <div class="col-md-12">
        </div>
      <div class="col-md-12 mt">
        <div class="content-panel">
         <div>
            <%= form_tag(update_meetings_path, :method=>'post', :multipart => true) do %>
            <table class="table">
              <tr>
                 <td>
                   Date:
                 </td>
                 <td>
                   <%=date_field_tag :meeting_date ,@meeting.meeting_date%>
                 </td>            
               </tr>
               <tr>
                 <td> Time:</td>
                 <td><%= time_field_tag :meeting_time ,@meeting.meeting_time %></td> 
              </tr>
              <tr>
                <td>Venue:</td>
                <td><%=text_area_tag :venue, @meeting.venue %></td>
              </tr>
              <tr>
                <td>Notes:</td>
                <td><%=text_area_tag :notes, @meeting.notes %></td>
              </tr>
              <tr>
                <td>Assigned to :</td>
                <td><%=  select_tag "assigned_to", options_for_select(@user.collect{ |u| [ u.email,u.id]},@meeting.assigned_to)%></td>
              </tr>   
              <%= hidden_field_tag :id , params[:id]%>
              <tr>
              <td></td>
               <td> <%= submit_tag 'Submit' %></td>
              </tr>
            </table>
          <% end %>
          </br>         
          <%= link_to "Back",meetings_path%> 
          </div>
        </div>
      </div>
    </div>
  </section>   
</section> 
<script>
  $( document ).ready(function() {
   $( ".toggl" ).hide();
  });
$( ".togg" ).click(function() {
  $( ".toggl" ).show();
});
 </script>

