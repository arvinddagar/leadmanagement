<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Meetings</h3>
    <div class="row">
        <div class="col-md-12">
        </div>
      <div class="col-md-12 mt">
        <div class="content-panel">
        <%= search_form_for @search, :html=>{:class=>"form-inline", :role=>"form"} do |f| %>
           <%= f.label 'Filter By Date' ,:class=>"f-label" %>
           <%= f.date_field :meeting_date_eq , :class=>'form-control'%>
            <%= f.label 'Venue' ,:class=>"f-label"%>
           <%= f.text_field :venue_eq , :class=>'form-control'%>
           <%if current_user.admin==true%>
            <%= f.label 'Assigned to' ,:class=>"f-label"%>
          <%= f.select :assigned_to_eq ,User.all.map.each {|c| [c.name,c.id]} ,{:include_blank=>"select"},:class=>'form-control'%>
          <%end%>
            <div class="actions" align="center"><%= f.submit "Search" %></div>
          <% end %>
          <table class='table'>
            <thead>
              <tr>
                <th>Meeting Date</th>
                <th>Meeting Time</th>
                <th>Venue</th>
                <th>Notes</th>
                <th>Assigned to</th>
                <th>status</th>
                <th >Actions</th>
              </tr>
            </thead>
          
            <tbody><section id="main-content">
              <% @meetings.each do |meeting| %>
                <tr>
                  <td><%= meeting.meeting_date.strftime("%d-%m-%y") if meeting.meeting_date.present? %></td>
                  <td><%= meeting.meeting_time.strftime('%I:%M%p') if meeting.meeting_time.present? %></td>
                  <td style="width:20px"><%= meeting.venue %></td>
                  <td style="width:20px"><%= meeting.notes%></td>
                  <%if meeting.assigned_to.present?%>
                  <td><%= User.find(meeting.assigned_to).name %></td>
                  <%end%>
                  <td><%= meeting.status%></td>
                  <td><%=link_to "Update status" ,edit_meetings_path(:id=>meeting)%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>   
</section>